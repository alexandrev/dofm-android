<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="downloadorganizer.xandrev.com.dofm.ImportExportActivity$PlaceholderFragment">

    <TextView android:text="Please, select the configuration file previously exported by the application to  change the configuration" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Configuration"
        android:id="@+id/button2"
        android:layout_marginTop="25dp"
        android:onClick="importConfig"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Configuration"
        android:id="@+id/button3"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:onClick="exportConfig" />

    <TextView
        android:text="Export configuration values to a configuration file to future uses in this or other Android devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />

</RelativeLayout>
